<h2>Create an Admin</h2>
<%= form_with(model: @user, url: admins_path, local: true) do |form| %>
  <div>
    <%= form.hidden_field :role_id, value: @role_id %>
  </div>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>
  <%= form.submit "Sign Up" %>
<% end %>
