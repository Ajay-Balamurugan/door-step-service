<div id = "option_<%= option.id %>" class="option">
    <div class="option_details">
        <h3 class="option_title">Title : <%= option.title%></h3><br />
        <h3> Description : </h3><br />
        <p class="option_description"><%= option.description%></p><br />
        <h3 class="option_price">Price : <%= option.price%></h3>
    </div>
    <div class="option_btns">
        <%= render 'options/edit_option_modal', option: option, service: service%>
        <%= button_to "Delete Option", service_option_path(service,option), method: :delete,  class: "btn btn-danger" %>
    </div>
</div>
