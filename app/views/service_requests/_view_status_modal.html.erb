<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#ViewStatusModal_<%=item.id%>">
  View Status
</button>
<!-- Modal -->
<div class="modal fade" id="ViewStatusModal_<%=item.id%>" tabindex="-1" aria-labelledby="ViewStatusModalLabel_<%=item.id%>" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="ViewStatusModalLabel_<%=item.id%>">Status</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <h3><%= item.status%></h3>
        <h3>OTP : <%= item.otp_code%></h3>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>