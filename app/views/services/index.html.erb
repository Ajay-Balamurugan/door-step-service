<%= javascript_include_tag 'service' %>

<h1>All Services</h1>
<div id="create">
    <%= render 'create_modal' %>
</div>

<hr />
<div id="services_container">
    <% if @services.any? %>
        <% @services.each do |service| %>
            <%= render 'service', service: service %>
        <% end %>
    <% else %>
        <p>No Services Found.</p>
    <% end %>
    <%= link_to "Back", admin_dashboard_path, class: "btn btn-danger" %>
</div>

